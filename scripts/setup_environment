#!/bin/bash

export PATH=$PATH:/jet/bin/
export HOME=/root
export USERPROFILE=/root

cd /jet/app/current

npm install -g node-pre-gyp
npm install -g node-gyp

export PATH=$PATH:/jet/var/mothership/capabilities/bin/lib/node_modules/node-pre-gyp/bin/
export PATH=$PATH:/jet/var/mothership/capabilities/bin/lib/node_modules/node-gyp/bin/

npm isntall bcrypt --verbose

npm install --verbose

echo "Deployment Group is : " ${DEPLOYMENT_GROUP_NAME}

aws s3 cp s3://pexeso.io/${DEPLOYMENT_GROUP_NAME}/env .env

